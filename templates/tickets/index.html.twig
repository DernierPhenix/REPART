{% extends 'base.html.twig' %}

{% block title %}Liste des tickets
{% endblock %}

{% block navbarTop %}
	<div class="logOut d-flex justify-content-around">
		{% if app.user %}
			bienvenue sur votre espace
			{{ app.user.userIdentifier }}
			!
			<a href="{{ path('app_logout') }}" class="btn btn-light ">Deconnexion</a>
		{% endif %}
	</div>
{% endblock %}
{% block contenu %}


	<div class="container">
		<br/>
		<h1>Liste des tickets</h1>
		<br/>
		<div class="table">

			<div class="table-wrapper">


				<table class="table table-hover">
					<a href="{{ path('app_tickets_new') }}" class="btn btn-primary">Créer</a>
					<thead>
						<tr>
							<th>Id</th>
							<th>Statut</th>
							
							
							<th>Date de creation</th>
							<th>Date Modif</th>
							
							<th>Nom du client</th>
							<th>Produit</th>
							<th>Sous - categories</th>
							<th>Employé</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody class='tableauxR'>
						{% for ticket in tickets %}

							<tr>
								<td>{{ ticket.id }}</td>
								<td>{{ ticket.statut }}</td>							
								<td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d') : '' }}</td>
								<td>{{ ticket.updatedAt ? ticket.updatedAt|date('Y-m-d') : '' }}</td>
								
					   		    <td>{{ ticket.clients.nom}}</td>
								<td>{{ ticket.modele}}</td>
								<td>{{ ticket.produits.sousCategories.nom}}</td>
								<td>{{ ticket.user.nom}}</td>
								<td>
									<a href="{{ path('app_tickets_show', {'id': ticket.id}) }}" class="btn btn-primary">Voir</a>
									<a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}" class="btn btn-primary">Modifier</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="10">no records found</td>
							</tr>
						</tbody>
					{% endfor %}
				</table>

			</div>
		</div>
	</div>
{% endblock %}
