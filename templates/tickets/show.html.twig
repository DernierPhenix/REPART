{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block contenu %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ ticket.etat }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ ticket.statut }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ ticket.updatedAt ? ticket.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rapport</th>
                <td>{{ ticket.rapport }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tickets_index') }}" class="btn btn-primary">Retour liste</a>

    <a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('tickets/_delete_form.html.twig') }}
{% endblock %}
