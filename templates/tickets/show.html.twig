{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block contenu %}
    <h1>Tickets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ ticket.etat }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ ticket.statut }}</td>
            </tr>
            <tr>
                <th>Description de la Panne</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ ticket.produits.sousCategories.categories.nom|default("") }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de Modification</th>
                <td>{{ ticket.updatedAt ? ticket.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rapport</th>
                <td>{{ ticket.rapport }}</td>
            </tr>
             <tr>
                <th>Employé</th>
                <td>{{ ticket.user.nom|default("") }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tickets.list.all') }}" class="btn btn-primary">Retour Liste</a>

    <a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}" class="btn btn-primary">Modifier</a><br><br>

    {{ include('tickets/_delete_form.html.twig') }}
{% endblock %}
