{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block style %}
	<style></style>
{% endblock %}



{% block bouton %}{% endblock %}


{% block contenu %}
    <h1 class="d-flex justify-content-center">Fiche Client : {{client.nom}}</h1> 
<br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ client.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.ville }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Raison Sociale</th>
                <td>{{ client.raisonSociale }}</td>
            </tr>
        </tbody>
    </table>

	<a href="{{ path('app_client_index') }}" class="btn btn-primary" class = "btn btn-primary">Retour liste</a>

	<a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary" class = "btn btn-primary">Modifier</a><br><br>

	{{ include('client/_delete_form.html.twig') }}
{% endblock %}
