{% extends 'base.html.twig' %}

{% block title %}Cat√©gories
{% endblock %}

{% block style %}
	<style></style>
{% endblock %}
{% block navbarTop %}
	<div class="logOut d-flex justify-content-around">
		{% if app.user %}
			bienvenue sur votre espace
			{{ app.user.userIdentifier }}
			!
			<a href="{{ path('app_logout') }}" class="btn btn-light ">Deconnexion</a>
		{% endif %}
	</div>
{% endblock %}


{% block bouton %}{% endblock %}


{% block contenu %}
	<div class="container">
		<br/>


		<table class=" d-flex justify-content-center">
			<a href="{{ path('app_client_index') }}" class="btn btn-primary">Retour liste</a>
			<br/>
			<br/>
			<div class=" d-flex justify-content-center">
				<div class="card " style="width: 25rem;">
					<div class="card-body">
						<center class="m-t-30 d-flex justify-content-center">

							<h1>
								
								{{client.nom}}
							</h1>
						</center>
					</div>
					<div><hr></div>
					<div class="card-body">
						<small class="text-muted">Id</small>
						<h6>{{ client.id }}</h6>
						<small class="text-muted">Nom</small>
						<h6>{{ client.nom }}</h6>
						<small class="text-muted">Prenom</small>
						<h6>{{ client.prenom }}</h6>
						<small class="text-muted">Adresse</small>
						<h6>{{ client.adresse }}</h6>
						<small class="text-muted p-t-30 db">Code postal</small>
						<h6>{{ client.cp }}</h6>
						<small class="text-muted p-t-30 db">Ville</small>
						<h6>{{ client.ville }}</h6>

						<small class="text-muted p-t-30 db">Telephone</small>
						<h6>{{ client.telephone }}</h6>
						<small class="text-muted p-t-30 db">Mail</small>
						<h6>{{ client.email }}</h6>
						<small class="text-muted p-t-30 db">Raison Sociale</small>
						<h6>{{ client.raisonSociale }}</h6>
					</div>
					<div><hr></div>
					<div class="card-body">
						<center class="m-t-30 d-flex justify-content-center">
							<a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">Modifier</a>
							&nbsp
							{{ include('client/_delete_form.html.twig') }}

						</center>
					</div>

				</div>
			</div>
		</table>
	</div>


{% endblock %}
