{% extends 'base.html.twig' %}

{% block title %}Cat√©gories
{% endblock %}

{% block style %}
	<style></style>
{% endblock %}
{% block navbarTop %}
	<div class="logOut">
		{% if app.user %}
			You are logged in as
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Logout</a>
		{% endif %}
	</div>
{% endblock %}


{% block contenu %}
	<h1>Client index</h1>

	<table class="table table-secondary table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Adresse</th>
				<th>Cp</th>
				<th>Ville</th>
				<th>Telephone</th>
				<th>Email</th>
				<th>RaisonSociale</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for client in clients %}
				<tr>
					<td>{{ client.id }}</td>
					<td>{{ client.nom }}</td>
					<td>{{ client.prenom }}</td>
					<td>{{ client.adresse }}</td>
					<td>{{ client.cp }}</td>
					<td>{{ client.ville }}</td>
					<td>{{ client.telephone }}</td>
					<td>{{ client.email }}</td>
					<td>{{ client.raisonSociale }}</td>
					<td>
						<a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
						<a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
