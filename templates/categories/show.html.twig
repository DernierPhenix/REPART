{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block contenu %}
	<h1>Catégories</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ category.nom }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ category.image }}</td>
			</tr>
		</tbody>
	</table>


	<a class='btn btn-primary' href="{{ path('app_categories_index', {'id': category.id}) }}">Retour Liste</a>
	<br>
	<br>

	{% if is_granted('ROLE_ADMIN') %}
		<a class='btn btn-primary' href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a><br>
		<br>
		{{ include('categories/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
