{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block style %}
	<style>
		.image {
			height: 100%;
			width: 100%;
		}
		.option {
			height: 100%;
			width: 100%;
		}
		#btn-cat {
			display: inline-block;
			text-align: center;
			vertical-align: middle;
			padding: 6px 15px;
			border: 0 solid #3c14ca;
			border-radius: 30px;
			background: #007bff;
		}
	</style>
{% endblock %}
{% block navbarTop %}
	<div class="logOut d-flex justify-content-around">
		{% if app.user %}
			bienvenue sur votre espace
			{{ app.user.userIdentifier }}
			!
			<a href="{{ path('app_logout') }}" class="btn btn-light ">Deconnexion</a>
		{% endif %}
	</div>
{% endblock %}

{% block contenu %}

	<h1>Liste des catégories</h1>

	<div class='row'>
		{% for category in categories %}

			<div class="col-12 col-md-6 col-lg-4 col-xl-3 ">
				<div class="card border-dark mb-3 mx-auto " id="options">

					<div class='card-header text-center'>
						<img src="/uploads/images/{{category.image}}" class='image' alt="Card image cap">
					</div>

					<div class="card-body">
						<h5 class="card-title">{{category.nom}}</h5>
					</div>
					<a class='btn btn-primary' href="{{ path('app_categories_show', {'id': category.id}) }}">Voir</a>


				</div>
			</div>

		{% endfor %}
	</div>


	<a class='btn btn-primary' id='btn-cat' href="{{ path('app_categories_new') }}">Créer</a>

{% endblock %}
