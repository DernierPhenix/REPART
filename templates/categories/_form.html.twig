{% block style %}
	<style>
		.pseudo-container {
			width:45%;
			height: 40%;
			background: #F5F5F5;
			display: grid;
			grid-template-rows: repeat(4, 104px);
			padding: 20px 20px 0px;
			border-radius: 16px;
			box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
			position: relative;
			left: 24%;
		}
		#sauvegarder {
			border-radius: 16px;
			width: 50%;
			margin-left: 25%;
			margin-right: 25%
		}
        #btn-cat{
            border-radius:45px;
            width:15%;
			margin-left: 40%;
        }
	</style>
{% endblock %}

<div class="pseudo-container">

	{{ form_start(form) }}

	{{ form_row(form.nom) }}

	{{ form_row(form.image) }}
	<button class="btn btn-primary" id='sauvegarder'>{{ button_label|default('Sauvegarder') }}</button>
	{{ form_end(form) }}

</div>
