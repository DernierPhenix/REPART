<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		{#Link css #}
		<link rel="stylesheet" href="{{asset('asset/css/style.css')}}">
		<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
		<link rel="stylesheet" href="https://code.jquery.com/ui/1.7.3/themes/base/jquery-ui.css">
		<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
		<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

	</head>
	<body>
		{% block style %}{% endblock %}


		<div class="navbarTop">
			<img class="logo" src="{{asset('asset/img/ReparTlogo.png')}}" alt="LOGO">

			<div class="logOut d-flex justify-content-around">
				{% if app.user %}
					Bienvenue sur votre espace
					{{ app.user.userIdentifier }}
					
					<a href="{{ path('app_logout') }}" class="btn btn-light ">Déconnexion</a>
				{% endif %}
			</div>
			{% block navbarTop %}{% endblock %}
		</div>

		<div class="main">
			<div class="navbarGauche">
				{% block bouton %}
					{% if block('bouton') is defined %}

						<div class="liste">
							<a class="btn btn-primary" id="btnT" href="{{ path('app_tickets_index') }}" role="button">TICKETS</a>

							<a class="btn btn-primary" id="btnT" href="{{ path('app_client_index') }}" role="button">CLIENTS</a>

							<a class="btn btn-primary" id="btnT" href="{{ path('app_categories_index') }}" role="button">CATÉGORIES</a>

							<a class="btn btn-primary" id="btnT" href="{{ path('app_sous_categorie_index') }}" role="button">SOUS-CATÉGORIES</a>

							<a class="btn btn-primary" id="btnT" href="{{ path('app_produit_index') }}" role="button">PRODUIT</a>
							
							<a class="btn btn-primary" id="btnT" href="{{ path('app_user_index') }}" role="button">EMPLOYÉS</a>
							<a class="btn btn-primary" id="btnT" href="{{ path('app_marque_index') }}" role="button">MARQUE</a>

						</div>
					{% endif %}
				{% endblock %}
			</div>

			<div class="menuCentre"> {% block contenu %}{% endblock %}
				</div>

			</div>
		</body>
	</html>
