{% extends 'base.html.twig' %}

{% block title %}SousCategorie index{% endblock %}

{% block contenu %}
    <h1>SousCategorie index</h1>

    <table class="table table-secondary table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Categories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sous_categorie in sous_categories %}
            <tr>
                <td>{{ sous_categorie.id }}</td>
                <td>{{ sous_categorie.nom }}</td>
                <td>{{ sous_categorie.categories.nom }}</td>
                <td>
                    <a href="{{ path('app_sous_categorie_show', {'id': sous_categorie.id}) }}">show</a>
                    <a href="{{ path('app_sous_categorie_edit', {'id': sous_categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sous_categorie_new') }}">Create new</a>
{% endblock %}
