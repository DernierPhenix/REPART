{% extends 'base.html.twig' %}

{% block title %}Liste des Sous-Categories
{% endblock %}
{% block style %}
	<style></style>
{% endblock %}
{% block navbarTop %}
	<div class="logOut d-flex justify-content-around">
		{% if app.user %}
			bienvenue sur votre espace
			{{ app.user.userIdentifier }}
			!
			<a href="{{ path('app_logout') }}" class="btn btn-light ">Logout</a>
		{% endif %}
	</div>
{% endblock %}


{% block contenu %}
    <h1>Liste des sous-cat√©gories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for sous_categorie in sous_categories %}
				<tr>
					<td>{{ sous_categorie.id }}</td>
					<td>{{ sous_categorie.nom }}</td>
					<td>
						<a href="{{ path('app_sous_categorie_show', {'id': sous_categorie.id}) }}" class="btn btn-primary">show</a>
						<a href="{{ path('app_sous_categorie_edit', {'id': sous_categorie.id}) }}"class="btn btn-primary">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_sous_categorie_new') }}"class="btn btn-primary">+</a>
{% endblock %}
