{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block contenu %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ produit.marque.nom }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ produit.modele }}</td>
            </tr>
            <tr>
                <th>Catégories</th>
                <td>{{ produit.sousCategories.categories.nom }}</td>
            </tr>
            <tr>
                <th>Sous-Catégories</th>
                <td>{{ produit.sousCategories.nom }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}" class = "btn btn-primary">Retour Liste</a>

    {% if is_granted('ROLE_ADMIN')%}

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class = "btn btn-primary">Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}

    {% endif %}

{% endblock %}
