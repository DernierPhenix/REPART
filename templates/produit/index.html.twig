{% extends 'base.html.twig' %}

{% block title %}Cat√©gories
{% endblock %}

{% block style %}
	<style></style>
{% endblock %}
{% block navbarTop %}
	<div class="logOut">
		{% if app.user %}
			You are logged in as
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}" class="btn btn-light ">Logout</a>
		{% endif %}
	</div>
{% endblock %}

{% block contenu %}
	<div class="container">
		<h1>Liste des produits</h1>

		<table>

			<a href="{{ path('app_produit_new') }}" class="btn btn-primary ">+</a>

			{% for produit in produits %}
				<br/>

				<tbody class="card mb-2" style="width: 18rem;">

					<tr class="d-flex justify-content-center mb-2">


						<td>{{ produit.marque }}</td>

						<td>{{ produit.modele }}</td>
					</tr>
					<tr class="d-flex justify-content-center mb-2">
						<td>
							<a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary ">show</a>
						</td>
						<td>
							<a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary ">edit</a>
						</td>
					</tr>

				</tbody>


			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}

		</table>

	</div>
{% endblock %}
