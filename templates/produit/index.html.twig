{% extends 'base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}
{% block style %}
	<style>
		.trr {

			transition: all 0.2s ease-in-out;
			cursor: pointer;

		}
		.trr:hover {

			transform: scale(1.02);
		}
	</style>
{% endblock %}
{% block navbarTop %}
	<div class="logOut d-flex justify-content-around">
		{% if app.user %}
			bienvenue sur votre espace
			{{ app.user.userIdentifier }}
			!
			<a href="{{ path('app_logout') }}" class="btn btn-light ">Deconnexion</a>
		{% endif %}
	</div>
{% endblock %}
{% block contenu %}

	<div class="container">
		<br/>
		<h1>Liste des produits</h1>
		<br/>
		<div class="table">
			<a href="{{ path('app_produit_new') }}" class="btn btn-primary">Créer</a>
			<br/>
			<div class="table-wrapper">


				<table class="table table-hover">
					<thead>
						<tr>
							<th>Id</th>
							<th>Marque</th>
							<th>Modele</th>
							<th>Categories</th>
							<th>Sous-Categories</th>
							
						</tr>
					</thead>
					<tbody>
						{% for produit in produits %}
							<div>
								<tr class="trr" href="{{ path('app_produit_show', {'id': produit.id}) }}">
									<td>{{ produit.id }}</td>
                                    <td>{{ produit.marque.nom }}</td>
									<td>{{ produit.modele }}</td>
									<td>{{ produit.sousCategories.categories.nom }}</td>
									<td>{{ produit.sousCategories.nom }}</td>
								</tr>
							</div>
						{% else %}
							<tr>
								<td colspan="4">Pas de Produits Trouvés</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
		</div>
	</div>
	<script>

		$(document).ready(function () {
$('table tr').click(function () {
window.location = $(this).attr('href');
return false;
});
});
	</script>
{% endblock %}
